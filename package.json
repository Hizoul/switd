{
  "name": "isofw-web",
  "version": "1.0.0",
  "main": "index.js",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "npm run dev",
    "build": "./node_modules/.bin/webpack --config ./webpack.config.prod.ts || true",
    "buildSsr": "./node_modules/.bin/webpack --config ./webpack.config.server.prod.ts  || true",
    "dev": "../ci/node_modules/.bin/webpack-dev-server --config ./webpack.config.ts --port 4201 --content-base webpackDist"
  },
  "dependencies": {
    "aframe": "^0.6.1",
    "aframe-environment-component": "^1.0.0",
    "aframe-particle-system-component": "^1.0.10",
    "aframe-react": "^4.3.0",
    "aframe-text-geometry-component": "^0.5.1",
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.0.1",
    "@types/extract-text-webpack-plugin": "^2.1.0",
    "@types/graceful-fs": "^4.1.0",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-test-renderer": "^15.5.4",
    "@types/webpack": "^3.0.10",
    "awesome-typescript-loader": "^3.2.3",
    "copy-webpack-plugin": "^4.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "graceful-fs": "^4.1.11",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "isofw-node(.*)": "<rootDir>/../isofw-node$1",
      "isofw-shared(.*)": "<rootDir>/../isofw-shared$1",
      "isofw-web(.*)": "<rootDir>/../isofw-web$1",
      "isofw-rn(.*)": "<rootDir>/../isofw-rn$1",
      "react-native": "<rootDir>/node_modules/react-native-web"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  }
}
