{
  "name": "switd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "npm run dev",
    "build": "./node_modules/.bin/webpack --config ./webpack.config.prod.ts || true",
    "experiment": "./node_modules/.bin/ts-node src/experimentRunner",
    "dev": "./node_modules/.bin/webpack-dev-server --config ./webpack.config.ts --port 4201 --content-base webpackDist",
    "test": "./node_modules/.bin/jest --coverage"
  },
  "dependencies": {
    "css-loader": "^0.28.7",
    "lodash": "^4.17.4",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-render-to-json": "^3.6.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "velocity-react": "^1.3.3",
    "webpack-dev-server": "^2.9.4"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.0.1",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/graceful-fs": "^4.1.2",
    "@types/jest": "^21.1.6",
    "@types/lodash": "^4.14.85",
    "@types/node": "^8.0.53",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/webpack": "^3.8.1",
    "awesome-typescript-loader": "^3.4.0",
    "copy-webpack-plugin": "^4.2.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "graceful-fs": "^4.1.11",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^21.2.3",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(css)$": "<rootDir>/__mocks__/styleTransform.js",
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "switd(.*)": "<rootDir>$1",
      "react": "preact-compat",
      ".*\\.css$": "<rootDir>/__mocks__/styleMock.ts"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  }
}
