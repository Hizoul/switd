{
  "name": "switd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "npm run dev",
    "build": "./node_modules/.bin/webpack --config ./webpack.config.prod.ts || true",
    "buildSsr": "./node_modules/.bin/webpack --config ./webpack.config.server.prod.ts  || true",
    "dev": "webpack-dev-server --config ./webpack.config.ts --port 4201 --content-base webpackDist"
  },
  "dependencies": {
    "@types/lodash": "^4.14.80",
    "lodash": "^4.17.4",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.0.1",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/graceful-fs": "^4.1.1",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "@types/react-test-renderer": "^16.0.0",
    "@types/webpack": "^3.0.14",
    "awesome-typescript-loader": "^3.2.3",
    "copy-webpack-plugin": "^4.2.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "graceful-fs": "^4.1.11",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "switd(.*)": "<rootDir>$1"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  }
}
